{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>SonarSource/renovate-config:languages-team.json"
  ],
  "enabledManagers": [
    "gradle",
    "gradle-wrapper",
    "github-actions"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": false,
      "groupName": "all github actions",
      "groupSlug": "all-github-actions"
    },
    {
      "matchManagers": [
        "gradle-wrapper"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "reviewers": [
    "team:quality-jvm-squad"
  ]
}
